@model NewGlass
<!-- Modal -->
<div class="modal fade" id="edit-glass" tabindex="-1" role="dialog" aria-labelledby="NewGlassLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title-glass" id="NewGlassLabel">Стакан</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="ViewNewGlass">
                    <input name="IsValid1" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        <label asp-for="Height">Высота</label>
                        <input asp-for="Height" class="form-control" value="@Model.Height" />
                        <input hidden asp-for="err" name="IsValid2" class="form-control2" id="e" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Width">Ширина</label>
                        <input asp-for="Width" class="form-control" value="@Model.Width" />
                        <span asp-validation-for="Width" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Сохранить</button>
            </div>
            <script>
                document.getElementById('e').innerHTML = @ViewData.Model.err;
            </script>
        </div>
    </div>
</div>
