@model EditGlass
<!-- Modal -->
<div class="modal fade" id="edit-glass" tabindex="-1" role="dialog" aria-labelledby="EditGlassLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="EditGlassLabel">Стакан</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label>@Model.h2</label>
            </div>
        </div>
    </div>
</div>